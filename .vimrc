colorscheme murphy
set number
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" disable octals with C-a and C-x
set nrformats=
set matchpairs+=<:>
set backspace=start,indent,eol
nnoremap / /\v
set ignorecase
set smartcase
set incsearch
set hlsearch
nmap <silent> <BS> :nohlsearch<CR>
